{
    "name": "getpop/block-metadata-for-wp",
    "type": "library",
    "description": "Integration with WordPress plugin \"Block Metadata\"",
    "keywords": [
        "PoP",
        "block-metadata-for-wp"
    ],
    "homepage": "https://github.com/getpop/block-metadata-for-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php" : "~7.1",
        "getpop/engine-wp": "~0.1",
        "getpop/posts-wp": "~0.1",
        "wpackagist-plugin/block-metadata": "^1.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PoP\\BlockMetadataWP\\": "src"
        },
        "files": [
            "initialize.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\BlockMetadataWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
